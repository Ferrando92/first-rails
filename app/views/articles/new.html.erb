<h1>Crear Articulo</h1> 
<div style:"padding=1.2em">
<% @article.errors.full_messages.each do |e|%>
<p class="error-new-article">
  <%=e %>
</p>
<% end -%>
	<%= form_for(@article) do |f| %>
		<div class="field">
			<%= f.text_field :title, placeholder:"Titulo"%>
		</div>
		<div class="field">
			<%= f.text_field :body, placeholder:"Escribe aqui tu Articulo" %>
		</div>
		<div class="field">
			<%= f.submit "Guardar"%>
		</div>
		<% end %>
</div>
